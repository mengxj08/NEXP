<UserControl x:Class="NEXP.Content.Balance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">
    <Grid Style="{StaticResource ContentRoot}">
        <TextBlock  xml:space="preserve" FontSize="20"  Foreground="#FF267BCF">Step 4.1: 
    - estimate the time for each trial (typically at least 
      3 trials per condition) 
Step 4.2: 
    - estimate the time for each block
Step 4.3: 
    - balance the trials and blocks so that the main 
      part of the experiment is within 45 minutes 
Step 4.4: 
    - combine with the condition arrangement
        </TextBlock>
    </Grid>
</UserControl>
